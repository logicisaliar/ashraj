<h1>Please add new Product</h1>
<%= simple_form_for product do |f| %>
<%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :type_id, collection: Type.all  %>
  <%= f.input :harmonic_id, collection: Harmonic.all.collect{ |t| [t.harmonic_detail.hsn_chapter, t.hsn_end]} %>
  <%= f.input :discount, input_html: {value: f.object.discount || 50} %>
  <%= f.input :description %>
  <%= f.input :mrp %>
  <%= f.input :unit, collection: ["Ltr", "Kg", "Units"] %>
  <%= f.association :use, as: :check_boxes %>
  <%= f.association :category, as: :check_boxes %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Go back", root_path %>
