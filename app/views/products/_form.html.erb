
<h1>Please add new Product</h1>
<%= simple_form_for product do |f| %>
  <%= f.input :name %>
  <%= f.input :type_id, collection: Type.all  %>
  <%= f.input :harmonic_id, collection: harmonic_return(Harmonic.all) %>
  <%= f.input :discount, input_html: {value: f.object.discount || 50} %>
  <%= f.input :description %>
  <%= f.input :mrp %>
  <%= f.input :unit, collection: ["Ltr", "Kg", "Units"] %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Go back", root_path %>
