<div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 form-default">
<%= simple_form_for company do |f| %>
<%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :kind, collection: @company_kinds, label_method: :second, value_method: :first %>
  <%= f.input :pan_number, label: "PAN", maxlength: 10, minlength: 9 %>
<% if @company.kind == 3 %>
  <%= f.input :parent_id, collection: @traders, label: "Trader" %>
<% end %>
  <%= f.input :gst_end, label: "GST (last 3 digits)", maxlength: 3, minlength: 2 %>
  <%= f.input :spl_instructions, label: "Special Instructions (if any)"%>
  <%= f.button :submit, class: "btn-submit" %>
<% end %>
</div>
