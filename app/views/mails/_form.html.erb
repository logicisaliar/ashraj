<div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 form-default">
  <%= simple_form_for mail do |f| %>
  <%= f.error_notification %>
  <%= f.input :eadd, label: "Email" %>
  <%= f.input :primary, collection: [:main, :other] %>
  <div class="hidden">
    <%= f.input_field "Pass Params", name: "company", value: params[:company] %>
  </div>
  <%= f.button :submit %>
  <% end %>
</div>
