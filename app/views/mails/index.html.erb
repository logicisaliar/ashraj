<div class="card-default card-order-brief col-xs-10 col-xs-offset-1 col-md-offset-4 col-md-4 top-margin">

  <% c = Company.find(params[:company]) %>
  <h3>
    <%= c.name %>
  </h3>
  <h4>
    <% @mails.each do |m| %>
    <%= m.eadd %>
    <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_mail_path(m, company: c) %>
    <% end %>
  </h4>
  <%= link_to "Go back", company_path(c) %>
</div>
