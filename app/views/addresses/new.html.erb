<div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 form-default">
  <%= simple_form_for @address do |f| %>
  <%= f.error_notification %>
  <%= f.input :pincode_id, collection: @pincodes, label_method: :second, value_method: :first %>
  <%= link_to "Add new pincode", new_pincode_path %>
  <%= f.input :street %>
  <%= f.input :kind, collection: [["Billing",1],["Other/Delivery",2]] %>
  <div class="hidden">
    <%= f.input_field "Pass Params", name: "company", value: params[:company] %>
  </div>
  <%= f.button :submit %>
  <% end %>
</div>

