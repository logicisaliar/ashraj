<div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 form-default">
  <%= simple_form_for order, url: client_orders_path do |f| %>
  <%= f.input :address_id, collection: @addresses, label_method: :second, value_method: :first, label: "Delivery Address" %>
  <%= f.input :transport_id, collection: @transports %>

  <div class="hidden">
    <%= f.input_field "", name: "company", value: order.company.id %>
  </div>

  <%= f.button :submit, "Submit", class: "btn-submit" %>
  <% end %>
</div>
