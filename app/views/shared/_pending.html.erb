<div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 form-default">
  <%= simple_form_for @order, url: client_order_path(@order) do |f| %>
  <%= f.error_notification %>
  <%= f.input :salesperson, collection: ["Jash", "Miti", "Rajesh"] %>
  <%= f.input :misc_charges %>
  <%= f.input :other_taxes %>
  <%= f.input :remark %>
  <div class="hidden">
    <%= f.input_field "Pass Params", name: "status", value: @order.status %>
  </div>
  <%= f.button :submit, class: "btn-submit" %>
  <% end %>
</div>
